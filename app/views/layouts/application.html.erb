<!DOCTYPE html>
<html>
	<head>
		<title>DjGear</title>
        <!-- bootstrap -->
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	    
	    <!-- bootstrap and javascript -->
	    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

	    <!-- responsive site -->
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <%= csrf_meta_tags %>
        
        <!-- font -->
	    <link href="https://fonts.googleapis.com/css?family=Mina" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button><!-- /. navbar toggle -->
				<%= link_to "DJGEAR", root_path, class: "navbar-brand" %>
				</div><!-- /. nav header -->

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<!-- ul class="nav navbar-nav" -->
					
					<ul class="nav navbar-nav navbar-right">							
						<li>
							<%= form_with(url: products_path, method: 'get', local: true) do |form| %>
							<%= form.text_field :q, id: 'q', value: params[:q], class: "form-control", placeholder: " what are you looking for?" %>
							<%= form.submit 'Search', class: 'btn btn-primary', id: "searchbutton"%>
							<% end %>
                        </li>

						<li class="dropdown">
							<li><%= link_to "products", products_path, role: "button" %></li>
							<li><%= link_to "About", about_about_path, role: "button" %></li>
							<li><%= link_to "Contact us", contact_contact_path, role: "button" %></li>
						</li><!-- /. dropdown -->				    
					</ul><!-- /. ul nav right -->
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav><!-- /. nav -->

		<%= yield %>

		<footer id="footer">
	        <div class="container-fluid">
				<div class="row">
					<div class="col-sm-3">
						<h5 class="footer_h5">Information</h5>
						<ul class="list-unstyled">
							<li><%= link_to "About", about_about_path, class: "footer_about_link"  %></li>
							<li>Delivery Information</li>
							<li>Privacy Policy</li>
							<li>Terms & Conditions</li>
						</ul>
					</div><!-- ./ col -->
					<div class="col-sm-3">
						<h5 class="footer_h5">Customer Service</h5>
						<ul class="list-unstyled">
							<li><%= link_to "Contact", contact_contact_path, class: "footer_contact_link" %></li>
							<li>Returns</li>
							<li>Site Map</li>
						</ul>
					</div><!-- ./ col -->
				
					<div class="col-sm-3">
						<h5 class="footer_h5">Extras</h5>
						<ul class="list-unstyled">
							<li>Brands</li>
							<li>Gift Certificates</li>
							<li>Affiliates</li>
							<li>Specials</li>
						</ul>
					</div><!-- ./ col -->

					<div class="col-sm-3">
						<ul class="list-unstyled">
						<h5 class="footer_h5">My Account</h5>
							<li>My Account</li>
							<li>Order History</li>
							<li>Wish List</li>
							<li>Newsletter</li>
						</ul>
					</div><!-- ./ col -->
				</div><!-- ./ row -->

				<%# This block will display a welcome message when you sign in. %>
				<p class="notice"><%= notice %></p>
       			<p class="alert"><%= alert %></p> 

				<hr>

				<p class="footer-text"> &copy; 2018 Dj GEAR | All rights reversed.</p>
			</div>
        </footer>
	</body>
</html>
