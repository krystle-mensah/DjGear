<div class="new-product-button">
    <button class="btn btn-primary new-product">
        <%= link_to 'New Product', new_product_path, class: "new_product_link" %>
    </button>
</div><!-- ./ new product button -->


<p class="body-text" id="notice"><%= notice %></p>


<header>
	<div class="container">
		<h1 class="page-header">Products</h1>
	</div><!-- ./ container -->
</header>


<section class="all_products">
	<div class="container">
	    <div class="row">
	     
	    <% cache(cache_key_for_products) do %>
	        <%= render 'products/product', locals: { product: @product } %>
        <% end %>
	    
	    </div>
	</div>	
</section>



