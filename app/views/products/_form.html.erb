<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">

    <div class="field form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: "products_form_name", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: "products_form_description", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :colour %>
      <%= form.text_field :colour, id: "products_form_color", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :price %>
      <%= form.text_field :price, id: "products_form_price", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :image_url %>
      <%= form.text_field :image_url, id: "products_form_image_url", class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-default" %>
    </div>

  </div> <!-- / Container Fluid -->

<% end %>