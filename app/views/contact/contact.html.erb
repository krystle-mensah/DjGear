<header>
    <div class="container">
        <h1 class="page-header">contact us</h1>      
    </div><!-- ./ container -->      
</header>


<!-- <p class="contact_email">Email: krystle.mensah@gmail.com</p> -->

<%= flash[:notice] %>

<section class="contact_form">
    <div class="container">
        <%= form_with(url:"/contact/thank_you", method: "post", local: true) do |form| %>
            <div class="row">
                <div class="col-sx-12">
                    <h2>contact form</h2>
                        <form action="" method="">
                            <div class="form-group">
                                <%= form.label :name %>
                                <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
                            </div>

                            <div class="form-group">
                                <%= form.label :email %>
                                <%= form.text_field :email, :required => true, class: "form-control", placeholder: "Enter Email" %>
                            </div>

                            <div class="form-group">
                                <%= form.label :message %>
                                <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
                            </div>

                            <div class="form-group">
                                <%= form.submit "Send", class: "btn btn-default" %>
                            </div>
                        </form><!-- ./ form -->            
                </div><!-- ./ col -->
            </div><!-- ./ row -->
        <% end %>
    </div><!-- /.container -->
</section><!-- ./ contact_form -->




