<h1 class="contact">contact us</h1>

<p class="contact_email">Email: krystle.mensah@gmail.com</p>

<%= flash[:notice] %>

<div class="container" id="contact_form">
    <%= form_with(url:"/contact/thank_you", method: "post", local: true) do |form| %>
        <div class="row">
            <div class="col-sx-12">
                <h2>contact form</h2>
                    <form action="" method="">
                        <div class="form-group">
                            <%= form.label :name %>
                            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
                        </div>

                        <div class="form-group">
                            <%= form.label :email %>
                            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
                        </div>

                        <div class="form-group">
                            <%= form.label :message %>
                            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
                        </div>

                        <div class="form-group">
                            <%= form.submit "Send", class: "btn btn-default" %>
                        </div>
                    </form>            
            </div><!-- ./ col -->
        </div><!-- ./ row -->
    <% end %>
</div><!-- /.container -->



