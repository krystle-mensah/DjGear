<div class="container">
    <div class="row">
        <% @orders.each do |order| %>
            <div class="col-sm-3 col-md-4">
                <h1 class="page-header">Order # <%= order.id %>:</h1>
                <h2><%= link_to order.product.name, order %></h2>
                <p><%= order.product.description %></p>
                <%# <strong>$ <%= order.product.price %><!-- /strong --> 
            </div><!-- /.col -->
        <% end %>
    </div><!-- /.row -->
</div><!-- /. container --> 